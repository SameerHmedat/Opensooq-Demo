<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:title="Select Category"
        app:titleTextColor="@color/black"
        app:titleCentered="false"
        app:titleMarginStart="30dp"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
        app:navigationIconTint="@color/black"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtInputLayoutCategory"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:textColorHint="#666666"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:helperTextTextColor="@color/black"
        app:hintTextColor="#666666"
        app:startIconTint="#666666"
        android:hint="search for category or subcategory"
        app:boxStrokeColor="@color/black"
        app:startIconDrawable="@drawable/ic_baseline_search_24"
        app:endIconMode="clear_text"
>
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_name_Category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconMode="clear_text"
            android:background="@color/white"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:inputType="text"
            android:textCursorDrawable="@drawable/custom_cursor_drawable"
            android:textColor="#666666" />

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCategories"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    </LinearLayout>



</LinearLayout>